<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="devops_docker_network_view_form" model="ir.ui.view">
        <field name="name">devops_docker_network_form</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="created_at" />
                        <field name="driver" />
                        <field name="id_network" />
                        <field name="id_short_network" />
                        <field name="internal" />
                        <field name="ipv6" />
                        <field name="labels" />
                        <field name="scope" />
                        <field name="system_id" />
                    </group>
                    <notebook>
                        <page string="Inspect">
                            <group>
                                <field name="inspect_full" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="devops_docker_network_view_graph" model="ir.ui.view">
        <field name="name">devops_docker_network_graph</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <graph string="Devops docker network">
                <field name="name" type="row" />
                <field name="created_at" type="row" />
                <field name="driver" type="row" />
                <field name="id_network" type="row" />
                <field name="id_short_network" type="row" />
                <field name="inspect_full" type="row" />
                <field name="internal" type="row" />
                <field name="ipv6" type="row" />
                <field name="labels" type="row" />
                <field name="scope" type="row" />
                <field name="system_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="devops_docker_network_view_kanban" model="ir.ui.view">
        <field name="name">devops_docker_network_kanban</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="created_at" />
                <field name="driver" />
                <field name="id_network" />
                <field name="id_short_network" />
                <field name="inspect_full" />
                <field name="internal" />
                <field name="ipv6" />
                <field name="labels" />
                <field name="scope" />
                <field name="system_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="created_at" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="driver" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="id_short_network" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="internal" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="ipv6" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="labels" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="scope" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="devops_docker_network_view_pivot" model="ir.ui.view">
        <field name="name">devops_docker_network_pivot</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <pivot string="Devops docker network">
                <field name="name" type="row" />
                <field name="created_at" type="row" />
                <field name="driver" type="row" />
                <field name="id_network" type="row" />
                <field name="id_short_network" type="row" />
                <field name="inspect_full" type="row" />
                <field name="internal" type="row" />
                <field name="ipv6" type="row" />
                <field name="labels" type="row" />
                <field name="scope" type="row" />
                <field name="system_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="devops_docker_network_view_search" model="ir.ui.view">
        <field name="name">devops_docker_network_search</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <search string="Devops docker network">
                <field name="name" />
                <field name="system_id" />
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active" />
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive" />
                <group string="Group By" expand="1">
                    <filter name="group_by_system_id" string="System" context="{'group_by':'system_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="devops_docker_network_view_tree" model="ir.ui.view">
        <field name="name">devops_docker_network_tree</field>
        <field name="model">devops.docker.network</field>
        <field name="arch" type="xml">
            <tree>
                <field name="created_at" />
                <field name="driver" />
                <field name="id_network" />
                <field name="id_short_network" />
                <field name="inspect_full" />
                <field name="internal" />
                <field name="ipv6" />
                <field name="labels" />
                <field name="scope" />
                <field name="name" />
                <field name="system_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="devops_docker_network_docker_network_group_action_window"
        name="Docker group network"
        res_model="devops.docker.network"
        view_mode="kanban,tree,pivot,graph,form"
        context="{'search_default_group_by_system_id': True}"
    />

    <act_window
        id="devops_docker_network_docker_network_action_window"
        name="Docker network"
        res_model="devops.docker.network"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
