<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="devops_docker_compose_view_form" model="ir.ui.view">
        <field name="name">devops_docker_compose_form</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                        <button
                            name="%(erplibre_devops.devops_docker_container_docker_container_action_window)d"
                            string="Docker container"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-tasks"
                            context="{'search_default_compose_id': [active_id]}"
                        />
                        <button
                            name="%(erplibre_devops.devops_docker_volume_docker_volume_action_window)d"
                            string="Docker volume"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-tasks"
                            context="{'search_default_compose_id': [active_id]}"
                        />
                    </div>
                    <group>
                        <field name="config_file_path" />
                        <field name="folder_root" />
                        <field name="is_running" />
                        <field name="system_id" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="devops_docker_compose_view_graph" model="ir.ui.view">
        <field name="name">devops_docker_compose_graph</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <graph string="Devops docker compose">
                <field name="name" type="row" />
                <field name="config_file_path" type="row" />
                <field name="is_running" type="row" />
                <field name="system_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="devops_docker_compose_view_kanban" model="ir.ui.view">
        <field name="name">devops_docker_compose_kanban</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="config_file_path" />
                <field name="is_running" />
                <field name="system_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="config_file_path" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.is_running.raw_value">
                                        <i class="fa fa-circle" aria-label="Ok" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.is_running.raw_value">
                                        <i class="fa fa-circle" aria-label="Invalid" role="img" title="Invalid" />
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="devops_docker_compose_view_pivot" model="ir.ui.view">
        <field name="name">devops_docker_compose_pivot</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <pivot string="Devops docker compose">
                <field name="name" type="row" />
                <field name="config_file_path" type="row" />
                <field name="is_running" type="row" />
                <field name="system_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="devops_docker_compose_view_search" model="ir.ui.view">
        <field name="name">devops_docker_compose_search</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <search string="Devops docker compose">
                <field name="name" />
                <field name="system_id" />
                <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active" />
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]" help="Show inactive" />
                <group string="Group By" expand="1">
                    <filter name="group_by_system_id" string="System" context="{'group_by':'system_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="devops_docker_compose_view_tree" model="ir.ui.view">
        <field name="name">devops_docker_compose_tree</field>
        <field name="model">devops.docker.compose</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_running" />
                <field name="config_file_path" />
                <field name="system_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="devops_docker_compose_docker_compose_group_action_window"
        name="Docker compose"
        res_model="devops.docker.compose"
        view_mode="kanban,tree,pivot,graph,form"
        context="{'search_default_group_by_system_id': True}"
    />

    <act_window
        id="devops_docker_compose_docker_compose_action_window"
        name="Docker compose"
        res_model="devops.docker.compose"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
