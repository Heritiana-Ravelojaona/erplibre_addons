<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="devops_docker_image_view_form" model="ir.ui.view">
        <field name="name">devops_docker_image_form</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div name="button_box" class="oe_button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="created_at" />
                            <field name="created_since" />
                        </group>
                        <group>
                            <field name="system_ids" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="id_short_image" />
                            <field name="id_image" />
                        </group>
                        <group>
                            <field name="repository" />
                            <field name="size_human" />
                            <field name="size_virtual_human" />
                            <field name="tag" />
                        </group>
                    </group>
                    <notebook>
                        <page string="inspect">
                            <group>
                                <field name="inspect_full" />
                            </group>
                        </page>
                        <page string="History">
                            <group>
                                <field name="history_full" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="devops_docker_image_view_graph" model="ir.ui.view">
        <field name="name">devops_docker_image_graph</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <graph string="Devops docker image">
                <field name="name" type="row" />
                <field name="created_at" type="row" />
                <field name="created_since" type="row" />
                <field name="history_full" type="row" />
                <field name="id_image" type="row" />
                <field name="inspect_full" type="row" />
                <field name="repository" type="row" />
                <field name="size_human" type="row" />
                <field name="size_virtual_human" type="row" />
                <field name="tag" type="row" />
            </graph>
        </field>
    </record>

    <record id="devops_docker_image_view_kanban" model="ir.ui.view">
        <field name="name">devops_docker_image_kanban</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="created_at" />
                <field name="created_since" />
                <field name="history_full" />
                <field name="id_image" />
                <field name="id_short_image" />
                <field name="inspect_full" />
                <field name="repository" />
                <field name="size_human" />
                <field name="size_virtual_human" />
                <field name="tag" />
                <field name="system_ids" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="created_at" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="created_since" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="id_short_image" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="size_virtual_human" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="system_ids" widget="many2many_tags" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="devops_docker_image_view_pivot" model="ir.ui.view">
        <field name="name">devops_docker_image_pivot</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <pivot string="Devops docker image">
                <field name="name" type="row" />
                <field name="created_at" type="row" />
                <field name="created_since" type="row" />
                <field name="history_full" type="row" />
                <field name="id_image" type="row" />
                <field name="inspect_full" type="row" />
                <field name="repository" type="row" />
                <field name="size_human" type="row" />
                <field name="size_virtual_human" type="row" />
                <field name="tag" type="row" />
            </pivot>
        </field>
    </record>

    <record id="devops_docker_image_view_search" model="ir.ui.view">
        <field name="name">devops_docker_image_search</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <search string="Devops docker image">
                <field name="name" />
                <field name="id_image" />
                <field name="system_ids" string="Systems" filter_domain="[('system_ids.name', '=', self)]" />
                <group string="Group By" expand="1">
                    <filter name="group_by_repository" string="Repository" context="{'group_by':'repository'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="devops_docker_image_view_tree" model="ir.ui.view">
        <field name="name">devops_docker_image_tree</field>
        <field name="model">devops.docker.image</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="created_at" />
                <field name="created_since" />
                <field name="id_short_image" />
                <field name="size_virtual_human" />
                <field name="system_ids" widget="many2many_tags" />
                <field name="tag" />
                <field name="repository" />
            </tree>
        </field>
    </record>

    <act_window
        id="devops_docker_image_docker_image_group_action_window"
        name="Docker image"
        res_model="devops.docker.image"
        view_mode="kanban,tree,pivot,graph,form"
        context="{'search_default_group_by_repository': True}"
    />

    <act_window
        id="devops_docker_image_docker_image_action_window"
        name="Docker image"
        res_model="devops.docker.image"
        view_mode="tree,kanban,pivot,graph,form"
    />
</odoo>
